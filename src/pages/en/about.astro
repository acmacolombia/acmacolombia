---
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
// import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Content from '~/components/widgets/Content.astro';
import Layout from '~/layouts/PageLayout.astro';
// import Team from '~/components/widgets/Team.astro';
import Steps2 from '~/components/widgets/Steps2.astro';

import { getLangFromUrl, useTranslations } from '~/i18n/utils';
const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);

const metadata = {
  title: t('nav.about'),
};
---

<Layout metadata={metadata}>

<Content
tagline=""
title=""
items={[

]}
image={{
 src: '~/assets/images/favicon.svg',
 alt: 'ACMA',
}}
> 

<Fragment slot="content">
  <h1 class="text-3xl font-bold text-accent dark:text-white highlight"> Boosting women participation in the Aerospace sector
      </h1> 
</br>
 <h3 class="text-2xl tracking-tight dark:text-white sm:text-2xl mb-2">
  The Colombian Association of Women in Aerospace is dedicated to promoting the participation, development and leadership of women in the aerospace field. We join efforts to inspire future generations and highlight the importance of diversity in the sector. 
</h3>
</Fragment>

</Content>

<Steps2 
title="Our Mission"
subtitle="The mission of the Colombian Association of Women in Aerospace is to inspire, empower and propel girls and women in the aerospace field, promoting their inclusion at all levels of training and professional practice, through the creation of a diverse constellation, the promotion of educational and research opportunities, and the strengthening of their presence in academia, industry and society. "
items={[
  {
    title: 'Inclusion',
    description: 'We promote equal opportunities and diversity within the aerospace sector.',
    icon: 'tabler:users',
  },
  {
    title: 'Collaboration',
    description: 'We believe in the power of working together to achieve our common goals.',
    icon: 'tabler:heart-handshake',
  },
  {
    title: 'Empowerment',
    description: 'We empower women to become leaders and agents of change.',
    icon: 'tabler:star',
  },
]} 
/> 

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact"
    stats={[
      { title: 'Members', amount: '400+' },
      { title: 'Events Held', amount: '20+' },
      { title: 'Projects', amount: '10+' },
      { title: 'Scholarships', amount: '10+' },
      // { title: 'Convenios', amount: '1+' },
    ]}
  />

  <!-- Features Widget *************** -->
<Features
id="features"
title="Our Programs"
subtitle="Discover how we are boosting growth and participation of women in the aerospace sector. We provide opportunities and development spaces for women to shine in the aerospace sector."
columns={3}
items={[
  {
    title: 'Talks and Conferences',
    description: 'We provide spaces for dialogue and learning to promote the exchange of knowledge and experiences in the aerospace sector.',
    icon: 'tabler:presentation',
  },
  {
    title: 'Mentorships',
    description: 'We connect women with professionals in the aerospace sector to provide guidance and support.',
    icon: 'tabler:heart-handshake',
  },
  {
    title: 'University Fairs',	
    description: 'We participate in the organization of university fairs to promote womenÂ´s interest in the aerospace sector.',	
    icon: 'tabler:stars',
  },
  {
    title: 'Challenges and Hackathons',
    description: 'We support diverse teams in aerospace competitions and hackathons.',	
    icon: 'tabler:trophy',
  },
  {
    title: 'Research Projects',
    description: 'We collaborate in research projects in the aerospace sector.',	
    icon: 'tabler:device-laptop',
  },
  {
    title: 'Scholarships',
    description: 'We offer scholarships to promote access and professional development in the aerospace sector.',
    icon: 'tabler:award',
  },
]}
/>

  <!-- Features2 Widget ************** -->

  <Features2
    id="joinus"
    title="Become a part of our constellation"
    tagline=""
    columns={3}
    items={[
      {
        title: 'As a Member',
        description: 'Join and access all the resources, events and programs we offer. As a member, you will benefit from a constellation of support that fosters personal and professional growth.',
        icon: 'tabler:user-plus', 
        callToAction: {
          target: '_blank',
          text: 'Register now',
          href: 'https://forms.gle/BVzbFWKxKjwiaxJx9',
        },
      },
      {
        title: 'As a Volunteer',
        description: 'Collaborate in our initiatives and events. It is an excellent way to contribute to our mission, while gaining valuable experience and knowledge in the sector. Join our team!',
        icon: 'tabler:user-heart',
        callToAction: {
          target: '_blank',
          text: 'Register now',
          href: 'https://forms.gle/r9PGQRniKetDTtFn6',
        },
      },
      {
        title: 'As a Sponsor',
        description:'Support our association and our programs. Together, we can promote the participation and empowerment of women in the aerospace sector.',
        icon: 'tabler:user-dollar',
        callToAction: {
          text: 'Contact us',
          href: 'mailto:acma.directiva@gmail.com',
        },
      },
    ]}  
  />
</Layout>