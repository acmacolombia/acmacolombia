---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';

import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Brands from '~/components/widgets/Brands.astro';

import { getLocalizedPermalink } from '~/utils/permalinks';

import { getLangFromUrl, useTranslations } from '~/i18n/utils';
const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);

const metadata = {
  title: t('acma'),
};
---

<Layout metadata={metadata}>

<!-- Hero2 Widget ******************* -->  
  <Hero2
    tagline="Colombian Association of Women in Aerospace"
    actions={[
      {
        variant: 'primary',
        text: 'Join Us',
        href: getLocalizedPermalink('en', 'about#joinus'),
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: '~/assets/images/ACMA.png',
      alt: 'ACMA Logo',
      style: 'max-width: 80%; height: auto;',
    }}
  >
    <Fragment slot="title">
      ACMA
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        We are your ally to shine in the aerospace field, cultivating a diverse constellation that drives your personal and professional growth.
      </span>
    </Fragment>
  </Hero2>

<!-- Stats Widget ****************** -->
<Stats
title="Discover the ACMA Universe"
subtitle="We are a diverse and talented community dedicated to promoting inclusion, professional development, and participation of women in the aerospace sector."
stats={[
  // { title: 'Founded in', amount: '2021'}
  { title: 'Members', amount: '400+' },
  { title: 'Events Held', amount: '20+' },
  { title: 'Projects', amount: '10+' },
  { title: 'Scholarships', amount: '10+' },
]}
/>

<Features
id="features"
title="Our Programs"
subtitle="Discover how we are boosting growth and participation of women in the aerospace sector. We provide opportunities and development spaces for women to shine in the aerospace sector."
columns={3}
items={[
  {
    title: 'Talks and Conferences',
    description: 'We provide spaces for dialogue and learning to promote the exchange of knowledge and experiences in the aerospace sector.',
    icon: 'tabler:presentation',
  },
  {
    title: 'Mentorships',
    description: 'We connect women with professionals in the aerospace sector to provide guidance and support.',
    icon: 'tabler:heart-handshake',
  },
  {
    title: 'University Fairs',	
    description: 'We participate in the organization of university fairs to promote women´s interest in the aerospace sector.',	
    icon: 'tabler:stars',
  },
  {
    title: 'Challenges and Hackathons',
    description: 'We support diverse teams in aerospace competitions and hackathons.',	
    icon: 'tabler:trophy',
  },
  {
    title: 'Research Projects',
    description: 'We collaborate in research projects in the aerospace sector.',	
    icon: 'tabler:device-laptop',
  },
  {
    title: 'Scholarships',
    description: 'We offer scholarships to promote access and professional development in the aerospace sector.',
    icon: 'tabler:award',
  },
]}
/>

