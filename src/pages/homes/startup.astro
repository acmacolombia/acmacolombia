---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'ACMA: Asociación Colombiana de Mujeres en Aeroespacial',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="ACMA"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Únete',
        href: 'https://forms.gle/BVzbFWKxKjwiaxJx9',
        icon: 'tabler:rocket',
      },
      { text: 'Conócenos', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Asociación Colombiana de Mujeres en Aeroespacial
    </Fragment>

    <Fragment slot="subtitle">
      ACMA es tu aliado para brillar en el ámbito aeroespacial, cultivando una constelación de apoyo que impulsa tu crecimiento. personal y profesional
    </Fragment>

    <Fragment slot="image">
      <div class="relative h-0 pb-[56.25%]">
        <iframe
          width="560"
          height="315"
          src="~/assets/images/ACMA.png"      
          title="YouTube video player"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
          allowfullscreen
          class="absolute top-0 left-0 w-full h-full"
        >
        </iframe>
      </div>
    </Fragment>
  </Hero>
  <!-- src="https://www.youtube.com/embed/dsTXcSeAZq8" -->

  <!-- Features2 Widget ************** -->

  <Features2
    title="Acerca de Nosotras"
    subtitle="Somos una comunidad dedicada a promover la inclusión, el desarrollo profesional y la participación de las mujeres en el sector aeroespacial de Colombia."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Descubre el universo ACMA"
    subtitle="Contamos con una comunidad diversa y talentosa que impulsa el crecimiento y la participación de las mujeres en el sector aeroespacial."
    stats={[
      { title: 'Lanzada en', amount: '2021' },
      { title: 'Miembros', amount: '+400' },
      { title: 'Proyectos', amount: '+10' },
      { title: 'Becas', amount: '+20' },
    ]}
  />

  <!-- Brands Widget ****************** -->

  <Brands
    title="Aliados"
    subtitle="En ACMA, confiamos en el poder de la colaboración para impulsar la innovación y crecer juntos en el sector aeroespacial."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
