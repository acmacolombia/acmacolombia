---
import Layout from '~/layouts/PageLayout.astro';
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);

const metadata = {
  title: t('nav.events'),
};
---

<Layout metadata={metadata}>


<center>

<iframe
  src="https://luma.com/embed/calendar/cal-Rm6fnGe9eB88fab/events"
  width="600"
  height="450"
  frameborder="0"
  style=""
  allowfullscreen=""
  aria-hidden="false"
  tabindex="0"
></iframe>

<iframe
  src="https://luma.com/embed/calendar/cal-Rm6fnGe9eB88fab/events?period=past"
  width="600"
  height="450"
  frameborder="0"
  style=""
  allowfullscreen=""
  aria-hidden="false"
  tabindex="0"
></iframe>

</center>

</Layout>