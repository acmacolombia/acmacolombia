---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Brands from '~/components/widgets/Brands.astro';

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="ACMA"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Únete',
        href: 'https://forms.gle/BVzbFWKxKjwiaxJx9',
        icon: 'tabler:rocket',
      },
      { text: 'Conócenos', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Asociación Colombiana de Mujeres en Aeroespacial
    </Fragment>

    <Fragment slot="subtitle">
      ACMA es tu aliado para brillar en el ámbito aeroespacial, cultivando una constelación de apoyo que impulsa tu crecimiento. personal y profesional
    </Fragment>

  </Hero>

<!-- Features2 Widget ************** -->

<Features2
title="Acerca de Nosotras"
subtitle="Somos una comunidad dedicada a promover la inclusión, el desarrollo profesional y la participación de las mujeres en el sector aeroespacial de Colombia."
>
<Fragment slot="bg">
  <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
</Fragment>
</Features2>

<!-- Stats Widget ****************** -->

<Stats
title="Descubre el universo ACMA"
subtitle="Contamos con una comunidad diversa y talentosa que impulsa el crecimiento y la participación de las mujeres en el sector aeroespacial."
stats={[
  { title: 'Lanzada en', amount: '2021' },
  { title: 'Miembros', amount: '+400' },
  { title: 'Proyectos', amount: '+10' },
  { title: 'Becas', amount: '+20' },
]}
/>

 <!-- Features2 Widget ************** -->

 <Features2
 title="¿Qué te ofrecemos?"
 subtitle="Brindamos oportunidades y espacios de desarrollo para que las mujeres brillen en el sector aeroespacial."
 items={[
   {
     title: 'Proyectos',
     description:
       'Apoyamos la participación de mujeres en proyectos aeroespaciales, fomentando la inclusión y el desarrollo profesional.',
     icon: 'flat-color-icons:document',
   },
   {
     title: 'Becas',
     description:
       'Promovemos el acceso a oportunidades y el desarrollo profesional en el sector aeroespacial a través de becas y programas de formación.',
     icon: 'flat-color-icons:document',
   },
   {
     title: 'Charlas',
     description:
       'Brindamos espacios de diálogo y aprendizaje para fomentar el intercambio de conocimientos y experiencias en el sector aeroespacial.',
     icon: 'flat-color-icons:document',
   },
 ]}
>
 <Fragment slot="bg">
   <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
 </Fragment>
</Features2>

<!-- Features Widget *************** -->

<Features
 id="features"
 title="Nuestros proyectos"
 subtitle="Descubre cómo estamos impulsando el crecimiento y la participación de las mujeres en el sector aeroespacial."
 columns={3}
 items={[
   {
     title: 'Charlas y Conferencias',
     description:
       'Visibilizamos y promovemos la participación de mujeres en el sector aeroespacial.',
     icon: 'tabler:presentation',
   },
   {
     title: 'Mentorías',
     description: 'Conectamos a mujeres con profesionales del sector aeroespacial para brindar orientación y apoyo.',
     icon: 'tabler:heart-handshake',
   },
   {
     title: 'Ferias Universitarias',
     description: 'Participamos en la organización de ferias universitarias para promover el interés de las mujeres en el sector aeroespacial.',
     icon: 'tabler:stars',
   },
   {
     title: 'Concursos y Hackathons',
     description: 'Apoyamos equipos diversos en concursos y hackathons aeroespaciales.',
     icon: 'tabler:trophy',
   },
   {
     title: 'Proyectos de Investigación',
     description:
       'Colaboramos en proyectos de investigación en el sector aeroespacial.',
     icon: 'tabler:device-laptop',
   },
   {
     title: 'Becas',
     description: 'Ofrecemos becas para fomentar el acceso y el desarrollo profesional en el sector aeroespacial.',
     icon: 'tabler:award',
   },
 ]}
/>








