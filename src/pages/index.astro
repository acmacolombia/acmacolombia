  <!-- Note Widget ******************* -->

  <Note />





  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Encuentra todos nuestros artículos en nuestro blog"
    information={`                `}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[{
      variant: "primary",
      target: '_blank',
      text: 'Inscríbete ahora',
      href: 'https://forms.gle/BVzbFWKxKjwiaxJx9',
      icon: 'tabler:rocket',
    }]}
  >
    <Fragment slot="title">¿Listas para despegar? </Fragment>

    <Fragment slot="subtitle">
      Únete a ACMA y descubre un universo de posibilidades.
    </Fragment>
