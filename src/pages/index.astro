---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';

import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'ACMA: Asociación Colombiana de Mujeres en Aeroespacial',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <!-- Hero2 Widget ******************* -->  
  <Hero2
    tagline="Asociación Colombiana de Mujeres en Aeroespacial"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Únete',
        href: 'https://forms.gle/BVzbFWKxKjwiaxJx9',
        icon: 'tabler:rocket',
      },
    ]}
    image={{ 
      src: '~/assets/images/ACMA.png',
      alt: 'ACMA Logo',
      style: 'max-width: 80%; height: auto;',
    }}
  >
    <Fragment slot="title">
      ACMA
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Somos tu aliado para brillar en el campo aeroespacial, cultivando una constelación de apoyo que impulsa tu crecimiento personal y profesional.
    </Fragment>
  </Hero2>

<!-- Stats Widget ****************** -->
<Stats
title="Descubre el universo ACMA"
subtitle="Somos una comunidad diversa y talentosa dedicada a promover la inclusión, el desarrollo profesional y la participación de las mujeres en el sector aeroespacial."
stats={[
  { title: 'Lanzada en', amount: '2021' },
  { title: 'Miembros', amount: '+400' },
  { title: 'Proyectos', amount: '+10' },
  { title: 'Becas', amount: '+20' },
]}
/>

